{% if pkzi %}
    <div class="pkzi-block">
        <h2 class="title lk-title">ПКЗИ</h2>
        <p>
            <b>{{ pkzi.name }}</b><br/>
            Срок действия до: <b>{{ pkzi.date }}</b>
            {% if date(pkzi.date) < date() %}
                <span class="vn-badge vn-badge-danger">Истёк</span>
            {% else %}
                <span class="vn-badge vn-badge-success">Актуален</span>
            {% endif %}
        </p>
        {% if pkzi.created_at %}
        <small>Информация обновлена {{ pkzi.created_at | date("d.m.Y") }}</small>
        {% endif %}
    </div>
{% endif %}