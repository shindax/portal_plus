<form method="post" action="{{ path('attachment_delete', {'id': attachment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ attachment.id) }}">
    <button class="btn">{{ 'action.delete' | trans }}</button>
</form>
