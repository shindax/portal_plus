{% extends '@ConsentPersData/bodyTwoColumn.html.twig' %}

{% block title %}Шаблоны писем{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th colspan="7" class="kand">
                    <h1 class="text-k">Шаблоны писем</h1>
                </th>
            </tr>
            <tr>
                <th class="ID">Id</th>
                <th class="Name">Наименование</th>
                <th class="Name">Тема</th>
                <th class="Name">Сообщение</th>
                <th class="Name">Файлы</th>
                <th class="Edit">{{ 'action.action' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 1 %}
        {% for template in templates %}
            {% set i = i + 1 %}
            {% if i % 2 == 1  %}
                <tr class="stroka2">
            {% else %}
                <tr>
            {% endif %}
                <td>{{ template.id }}</td>
                <td>{{ template.name }}</td>
                <td>{{ template.subject }}</td>
                <td>{{ template.body }}</td>
                <td>{{ template.filesName ? template.filesName|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('template_show', {'id': template.id}) }}"  rel="noopener noreferrer" title="{{ 'action.show' | trans }}">
                        <img class="icoEdit" src="/bundles/consentpersdata/images/icons/cpd/iconki-show2.png" alt="{{ 'action.show' | trans }}" srcset="">
                    </a>
                    <a href="{{ path('template_edit', {'id': template.id}) }}"  rel="noopener noreferrer" title="{{ 'action.edit' | trans }}">
                        <img class="icoEdit" src="/bundles/consentpersdata/images/icons/cpd/design_edit.png" alt="{{ 'action.edit' | trans }}" srcset="">
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'action.notfound' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('template_new') }}">Новый шаблон</a>
{% endblock %}
