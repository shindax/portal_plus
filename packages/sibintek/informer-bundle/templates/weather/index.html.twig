{% extends '@Informer/base.html.twig' %}

{% block title %}Weather index{% endblock %}

{% block body %}
    <h1>Weather index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Temperature</th>
                <th>Name</th>
                <th>Pressure</th>
                <th>Humidity</th>
                <th>Type</th>
                <th>Winddirection</th>
                <th>Windpower</th>
                <th>Source</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for weather in weather %}
            <tr>
                <td>{{ weather.id }}</td>
                <td>{{ weather.temperature }}</td>
                <td>{{ weather.name }}</td>
                <td>{{ weather.pressure }}</td>
                <td>{{ weather.humidity }}</td>
                <td>{{ weather.type }}</td>
                <td>{{ weather.winddirection }}</td>
                <td>{{ weather.windpower }}</td>
                <td>{{ weather.source }}</td>
                <td>
                    <a href="{{ path('weather_show', {'id': weather.id}) }}">show</a>
                    <a href="{{ path('weather_edit', {'id': weather.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('weather_new') }}">Create new</a>
{% endblock %}
